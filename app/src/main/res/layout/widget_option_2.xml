<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget3Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/dialog_background_round_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_152sdp">

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/searchBar"
            android:paddingTop="@dimen/_9sdp"
            android:paddingBottom="@dimen/_9sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16sdp"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_border_blue"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivSearchIcon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:tint="@color/textInput"
                android:src="@drawable/icon_main_find"
                android:layout_marginEnd="@dimen/_20sdp"
                android:contentDescription="@string/search" />

            <TextView
                android:id="@+id/tvSearchPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/search_icon"
                android:fontFamily="sans-serif"
                android:textFontWeight="400"
                android:textStyle="italic"
                android:textSize="13sp"
                android:textColor="@color/textInput" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/latest_file_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_16sdp"
            android:gravity="center_vertical">

            <!-- PDF Icon -->
            <ImageView
                android:id="@+id/file_icon_1"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/icon_main_pdf" />

            <!-- File Info (Title + Date/Size) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/file_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PDF-02.pdf"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="700"
                    android:textColor="@color/text1"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/file_details_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar 4 10:01 AM | 100 KB"
                    android:textSize="11sp"
                    android:textFontWeight="400"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second Recent File Row -->
        <LinearLayout
            android:id="@+id/latest_file_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
           >

            <!-- DOC Icon -->
            <ImageView
                android:id="@+id/file_icon_2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/icon_main_word" />

            <!-- File Info (Title + Date/Size) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/file_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Homework.doc"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="700"
                    android:textColor="@color/text1"
                    android:textSize="12sp" />

                <TextView
                    android:layout_marginTop="@dimen/_4sdp"
                    android:id="@+id/file_details_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mar 4 10:01 AM | 100 KB"
                    android:textSize="11sp"
                    android:textFontWeight="400"
                    android:textColor="@color/textSecondary" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
