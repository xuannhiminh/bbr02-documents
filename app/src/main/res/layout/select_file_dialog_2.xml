<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/dialog_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">
        <LinearLayout
            android:id="@+id/func_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/view">
            <office.pdf.document.reader.viewer.editor.view.ItemFunctionView
                android:id="@+id/func_detail_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                app:fvTextColor="@color/text1"
                android:textSize="14sp"
                app:fvIcon="@drawable/icon_detail"
                app:fvTitle="@string/detail" />

            <office.pdf.document.reader.viewer.editor.view.ItemFunctionView
                android:id="@+id/func_rename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                app:fvTextColor="@color/text1"
                app:fvIcon="@drawable/file_func_edit"
                app:fvTitle="@string/rename" />

            <office.pdf.document.reader.viewer.editor.view.ItemFunctionView
                android:id="@+id/func_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                app:fvTextColor="@color/text1"
                android:textSize="14sp"
                app:fvIcon="@drawable/file_func_share"
                app:fvTitle="@string/share" />

            <office.pdf.document.reader.viewer.editor.view.ItemFunctionView
                android:id="@+id/func_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                app:fvTextColor="@color/text1"
                android:textSize="14sp"
                app:fvIcon="@drawable/file_func_delete"
                app:fvTitle="@string/delete" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
