<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_20sdp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_10sdp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:src="@drawable/icon_setting_back_black"/>
        <ImageView
            android:id="@+id/tv_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@drawable/icon_main_all" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/all"
            android:textColor="@color/text1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:visibility="gone"
            android:src="@drawable/icon_main_find" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:src="@drawable/icon_main_check" />
        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:src="@drawable/icon_main_filter" />
        <ImageView
            android:id="@+id/iv_iap"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:visibility="gone"
            android:src="@drawable/icon_diamond_iap" />
    </LinearLayout>
    <!-- Menu dưới header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choose_type"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tv_all_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_all"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/all"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textSize="16sp"
                android:background="@drawable/underline"
                android:textColor="@color/dark_gray"
                android:paddingVertical="8dp" />

            <View
                android:id="@+id/underline_all"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/red"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_pdf_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pdf"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:text="@string/pdf"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:paddingVertical="8dp" />

            <View
                android:id="@+id/underline_pdf"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/dark_gray"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_word_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_word"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:text="@string/word"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:paddingVertical="8dp" />

            <View
                android:id="@+id/underline_word"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/dark_gray"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_excel_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_excel"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/excel"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:paddingVertical="8dp" />

            <View
                android:id="@+id/underline_excel"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/dark_gray"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_ppt_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ppt"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ppt"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:paddingVertical="8dp" />

            <View
                android:id="@+id/underline_ppt"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/dark_gray"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_txt_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_txt"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/txt"
                android:fontFamily="sans-serif"
                android:textFontWeight="500"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:paddingVertical="8dp" />

            <View
                android:id="@+id/underline_txt"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/dark_gray"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
