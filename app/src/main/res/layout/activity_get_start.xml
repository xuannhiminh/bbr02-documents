<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPermission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingTop="@dimen/_12sdp"
    android:background="@android:color/white"
    tools:context=".screen.start.RequestAllFilePermissionActivity">


    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_pdf_reader"
        android:textAlignment="center"
        android:textColor="@color/text1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Animation nằm giữa Title và Subtitle -->
    <LinearLayout
        android:id="@+id/layout_animated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textSubtitle"
        android:layout_marginTop="@dimen/_10sdp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/_287sdp"
            android:layout_height="@dimen/_217sdp"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/man_with_task_list" />
    </LinearLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_35sdp"
        android:text="@string/permission_required"
        android:textColor="@color/text1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintTop_toBottomOf="@id/layout_animated"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Explanation text -->
    <TextView
        android:id="@+id/textPermissionExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/permission_explanation"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/text1"
        app:layout_constraintTop_toBottomOf="@+id/textSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons container -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_35sdp"
        app:layout_constraintTop_toBottomOf="@+id/textPermissionExplanation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonAllow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_share"
            android:textAllCaps="false"
            android:text="@string/allow"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/buttonLater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/text2"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:text="@string/later"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
