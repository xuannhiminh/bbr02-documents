        <LinearLayout
            android:id="@+id/bottom_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- BottomNavigationView -->
            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:translationZ="0dp"
                app:itemTextAppearanceActive="@style/BottomNavigationViewText"
                app:itemTextAppearanceInactive="@style/BottomNavigationViewText"
                android:background="@drawable/bottom_nav_top_border"
                app:elevation="0dp"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_nav_menu" />

            <!-- Banner Ads -->
            <RelativeLayout
                android:id="@+id/banner_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent">
                <include
                    android:id="@+id/shimmer_container_banner"
                    layout="@layout/layout_banner" />
            </RelativeLayout>

        </LinearLayout>


        <include
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />
        <LinearLayout
            android:id="@+id/layout_total_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layout_native"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textFontWeight="500"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:textColor="@color/text1" />

            <TextView
                android:id="@+id/tv_total_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="0 "
                android:textSize="12sp"
                android:textFontWeight="400"
                android:fontFamily="sans-serif"
                android:textColor="@color/textSecondary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/file"
                android:textSize="12sp"
                android:textFontWeight="400"
                android:fontFamily="sans-serif"
                android:textColor="@color/textSecondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/check"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/icon_main_check" />
            <ImageView
                android:id="@+id/filter"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:src="@drawable/icon_main_filter" />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/layout_native"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_total_files"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/feature_request_section">
            <FrameLayout
                android:id="@+id/frNativeAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>
        </FrameLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/feature_request_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/layout_native"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/input"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:weightSum="1">

                <ImageView
                    android:layout_width="53dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_feature_request_main"
                    android:contentDescription="Folder Icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feature_request_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@string/feature_request"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/text1"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/we_add_new_feature"
                        android:textColor="@color/gray1"
                        android:fontFamily="sans-serif"
                        android:textFontWeight="400"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/feature_request_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request"
                    android:background="@drawable/bg_btn_share"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:textSize="12sp"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:elevation="0dp"
                    android:letterSpacing="0"
                    android:shadowColor="@android:color/transparent"
                    android:fontFamily="sans-serif"
                    android:textFontWeight="500"
                    android:stateListAnimator="@null"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/notification_warning_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:background="@drawable/bg_notice_section"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/feature_request_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/recently_added_section"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_29sdp"
                android:src="@drawable/icon_notice"
                android:contentDescription="@string/notice" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notification_warning_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notice"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/text1"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notice_content"
                    android:textColor="@color/gray1"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/notification_warning_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enable"
                android:background="@drawable/bg_enable_button"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:textSize="12sp"
                android:gravity="center"
                android:textFontWeight="400"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recently_added_section"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@id/notification_warning_section"
            app:layout_constraintBottom_toTopOf="@id/view_pager_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/recently_file_header"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/_10sdp">

                <TextView
                    android:id="@+id/recently_file_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/recent_add"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text1" />

                <TextView
                    android:id="@+id/recently_added_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2"
                    android:visibility="gone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/recently_added_icon"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:visibility="gone"
                    android:src="@drawable/icon_drop_down"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_recent_file"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/button_create"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottom_section"
            android:layout_margin="10dp"
            android:src="@drawable/icon_add_file"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>